<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyleListenWriteGameMain</item>
    </style>

    <style name="MenuTextStyleListenWriteGameMain">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!--
         <item name="android:windowBackground">@color/blue</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    -->
    <style name="NoBackGroundDialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@color/blue</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>
    
     <style name="BaseStyle" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--加载对话窗-->
    <style name="BaseDialog" parent="@android:style/Theme.Dialog"/>
    <style name="Theme.Light.LoadingDialog" parent="@style/BaseDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <!--自定义View-material的样式-->
    <style name="TextAppearance.MaterialCalendarWidget.Header"
           parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textStyle">bold</item>
    </style>


    <!--Item字体的基本样式-->
    <style name="BaseItemTextStyle">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#fff</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    
</resources>