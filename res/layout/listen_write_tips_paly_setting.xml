<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BDBBB9" >

    <ScrollView
        android:id="@+id/recite_text_main_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="60.0dip"
            android:paddingLeft="0.0dip"
            android:paddingRight="0.0dip"
            android:paddingTop="10.0dip" >

            <TableLayout
                android:id="@+id/MorePageTableLayout_Follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="#BDBBB9"
                android:gravity="center_vertical|center_horizontal"
                android:paddingLeft="1dp"
                android:shrinkColumns="1"
                android:stretchColumns="0" >

                <TableRow
                    android:id="@+id/more_page_row1"
                    android:layout_width="fill_parent"
                    android:layout_marginLeft="2.0dip"
                    android:layout_marginRight="2.0dip"
                    android:paddingBottom="16.0dip"
                    android:paddingTop="16.0dip" >

                    <TextView
                        android:id="@+id/setting_account_textView"
                        android:layout_width="22dp"
                        android:layout_height="157dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center_vertical|center_horizontal"
                        android:includeFontPadding="false"
                        android:text="两个词语间隔秒数"
                        android:textColor="#ff333333"
                        android:textSize="22sp" />

                    <NumberPicker
                        android:id="@+id/setting_intervalNumberPicker"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_horizontal|center_vertical" />
                </TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="7dp"
                    android:background="#ffffff" />

                <TableRow
                    android:id="@+id/more_page_row2"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:paddingBottom="16dip"
                    android:paddingTop="16dip" >

                    <TextView
                        android:id="@+id/setting_mark_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="157dp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="每个词语阅读次数"
                        android:textColor="#ff333333"
                        android:textSize="22sp" />

                    <NumberPicker
                        android:id="@+id/setting_frequencyNumberPicker"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:gravity="center_horizontal|center_vertical" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>