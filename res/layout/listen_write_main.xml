<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/no" >

    <GridView
        android:id="@+id/listen_write_main_gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/listen_write_main_linearLayout"
        android:columnWidth="80dp"
        android:gravity="center_vertical|center_horizontal"
        android:numColumns="4"
        android:padding="0dp"
        android:stretchMode="columnWidth" >
    </GridView>

    <LinearLayout
        android:id="@+id/listen_write_main_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="5dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/listen_write_main_textView_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/yes"
            android:padding="20dp"
            android:text="暂停" />

        <TextView
            android:id="@+id/listen_write_main_textView_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@color/yes"
            android:padding="20dp"
            android:text="结束" />
    </LinearLayout>

</RelativeLayout>